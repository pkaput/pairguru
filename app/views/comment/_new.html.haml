= simple_form_for @comment, class: "form-group", url: create_comment_movie_path  do |f|
  = f.text_field :text, class: "form-control"
  = f.association :movie, as: :hidden, input_html: { value: params[:id] }
  = f.association :user, as: :hidden, input_html: { value: current_user.id }
  = f.submit "Create comment", class: "btn btn-success btn btn-xl"